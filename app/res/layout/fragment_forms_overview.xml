<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:id="@+id/media_time_captured"
            style="@style/EditorMediaTimeStyle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.5"
            android:gravity="left|center_vertical"
            android:text="13 Feb 2013 10:27 PM" />

        <TextView
            android:id="@+id/media_details_location"
            style="@style/EditorMediaInfoStyle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="right|center_vertical"
            android:text="Shared 3 days ago with IBA" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAudioFiles"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/audio_note_list_background"
        android:orientation="horizontal"
        android:scrollbars="horizontal" >

    </LinearLayout>

    <TextView
        android:id="@+id/media_notes"
        style="@style/EditorTopLevelNote"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="top|left"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btnAddAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:visibility="gone" />

</LinearLayout>